@model SalesListViewModel

<h1>Quarterly Sales</h1>

@Html.DropDownList("employeeId", Model.Employee, "-- Filter by Employee --", new { onchange = "this.form.submit();" })

<table class="table">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Quarter</th>
            <th>Year</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model.Sales)
        {
            <tr>
                <td>@(sale.Employee != null ? sale.Employee.Fullname : "")</td>
                <td>@sale.Quarter</td>
                <td>@sale.Year</td>
                <td>@sale.Amount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

